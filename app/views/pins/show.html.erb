<%= link_to 'Pins', pins_path, class: "glyphicon glyphicon-chevron-left btn btn-default to_pins_button" %>

    <div class="panel panel-default show-view-container">
      <div class="panel-heading">

        <% if @pin.image.exists?(:large) %>
        <%= image_tag @pin.image.url(:large), class: "img-responsive"%>
        <% else %>
        <%= image_tag @pin.image.url(:medium), class: "img-responsive" %>
        <% end %>
  
      </div>
      <div class="pin-description panel-body">
        <p><%= @pin.description %></p>
        <p class="user"><span class="glyphicon glyphicon-user"></span> <strong><%= @pin.user.name if @pin.user %></strong></p>
        <div class="pin-actions">
          <% if @pin.user == current_user %>
           <%= link_to edit_pin_path(@pin) do %>
            <span class="glyphicon glyphicon-pencil"></span> Edit
           <%end%>
          <% end %>
        </div>
      </div>
    </div>
